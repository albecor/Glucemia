<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="115"
            android:id="@+id/value"
            android:textSize="52sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/datetime"
            android:text="2016/15/06 20:04"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/value"
            android:layout_alignBottom="@+id/value"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="150dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Estado"
            android:id="@+id/state"
            android:textColor="@color/secondary_text"
            android:layout_below="@+id/datetime"
            android:layout_alignLeft="@+id/datetime"
            android:layout_alignStart="@+id/datetime" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:id="@+id/linea"
            android:layout_below="@+id/state"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Performer"
            android:id="@+id/performer"
            android:textColor="@color/primary_text"
            android:layout_below="@+id/linea"
            android:layout_alignRight="@+id/linea"
            android:layout_alignEnd="@+id/linea" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/secondary_text"
            android:text="mmol/l"
            android:id="@+id/unite"
            android:layout_alignTop="@+id/performer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
